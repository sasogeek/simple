import "github.com/gin-gonic/gin"
import "net/http"
import "os"

app = gin.Default()
app.LoadHTMLGlob("templates/*")


def index(c):
    data = gin.H{
        "Title": "My Gin Web Page",
        "Heading": "Ohhh yes!",
        "Message": "This page is rendered using Gin with template variables!",
    }
    c.HTML(http.StatusOK, "index.html", data)


app.GET("/", index)


port = os.Getenv("PORT")
if port == "":
    port = "8080"

app.Run(":"+port)
