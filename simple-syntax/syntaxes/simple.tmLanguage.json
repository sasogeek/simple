{
    "scopeName": "source.simple",
    "name": "Simple",
    "fileTypes": ["simple"],
    "patterns": [
      { "include": "#comments" },
      { "include": "#keywords" },
      { "include": "#constants" },
      { "include": "#operators" },
      { "include": "#strings" },
      { "include": "#numbers" },
      { "include": "#functions" },
      { "include": "#variables" },
      { "include": "#punctuation" }
    ],
    "repository": {
      "comments": {
        "patterns": [
          {
            "name": "comment.line.number-sign.simple",
            "match": "#.*$"
          }
        ]
      },
      "keywords": {
        "patterns": [
          {
            "name": "keyword.control.simple",
            "match": "\\b(def|class|if|else|elif|while|for|return|print|import|from|try|except|finally|assert|break|is|in|and|or|not|self|as)\\b"
          }
        ]
      },
      "constants": {
        "patterns": [
          {
            "name": "constant.language.boolean.simple",
            "match": "\\b(True|False|None)\\b"
          }
        ]
      },
      "operators": {
        "patterns": [
          {
            "name": "keyword.operator.simple",
            "match": "(==|!=|>=|<=|>|<|\\+|\\-|\\*|/|&&|\\|\\|)"
          }
        ]
      },
      "strings": {
        "patterns": [
          {
            "name": "string.quoted.double.simple",
            "begin": "\"",
            "end": "\"",
            "patterns": [
              {
                "name": "constant.character.escape.simple",
                "match": "\\\\."
              }
            ]
          },
          {
            "name": "string.quoted.single.simple",
            "begin": "'",
            "end": "'",
            "patterns": [
              {
                "name": "constant.character.escape.simple",
                "match": "\\\\."
              }
            ]
          }
        ]
      },
      "numbers": {
        "patterns": [
          {
            "name": "constant.numeric.integer.simple",
            "match": "\\b\\d+\\b"
          },
          {
            "name": "constant.numeric.float.simple",
            "match": "\\b\\d+\\.\\d+\\b"
          }
        ]
      },
      "functions": {
        "patterns": [
          {
            "name": "entity.name.function.simple",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\()"
          }
        ]
      },
      "variables": {
        "patterns": [
          {
            "name": "variable.other.simple",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
          }
        ]
      },
      "punctuation": {
        "patterns": [
          {
            "name": "punctuation.separator.colon.simple",
            "match": ":"
          },
          {
            "name": "punctuation.separator.comma.simple",
            "match": ","
          },
          {
            "name": "punctuation.section.parens.begin.simple",
            "match": "\\("
          },
          {
            "name": "punctuation.section.parens.end.simple",
            "match": "\\)"
          },
          {
            "name": "punctuation.section.brackets.begin.simple",
            "match": "\\["
          },
          {
            "name": "punctuation.section.brackets.end.simple",
            "match": "\\]"
          },
          {
            "name": "punctuation.section.braces.begin.simple",
            "match": "\\{"
          },
          {
            "name": "punctuation.section.braces.end.simple",
            "match": "\\}"
          }
        ]
      }
    }
  }

